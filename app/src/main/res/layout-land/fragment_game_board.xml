<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameBoardID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:textAlignment="center"
    tools:context=".GameBoardFragment"
    android:orientation="horizontal"
    android:focusable="true">


    <GridLayout
        android:id="@+id/gridLayoutGameBoard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="10"
        android:rowCount="10"
        android:background="@drawable/dummy_gameboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtViewUsername"
            android:layout_width="129dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:text="@string/username"
            app:layout_constraintBottom_toTopOf="@+id/btn_rollDice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.312"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_rollDice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_row="7"
            android:layout_column="4"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="50dp"
            android:text="Roll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtViewUsername"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
